<div class="col-md-6 col-md-offset-3">

	<div class="edit-review-form">

		<h1>Edit Review</h1>

		<% if @review.user_id == current_user.id %>

			<%= simple_form_for([@book, @review]) do |f| %>
				<div id="rating-form">
					<label>Rating</label>
				</div>
				<%= f.input :comment %>
				<%= f.button :submit, :class => "btn-custom2" %>
			<% end %>	

		<% else %>

		<h3>You're not allowed to edit this review</h3>

		<% end %>

	</div>

</div>

<script>
	$('#rating-form').raty({
		path: '/assets/',
		scoreName: 'review[rating]'
	});
</script>